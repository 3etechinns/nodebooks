<div class="panel-heading">
    <i class="fa fa-edit fa-fw"></i> Add Account
</div>
<!-- /.panel-heading -->
<div class="panel-body">
    <form>
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" name="name" value="<%= getAttr('name')%>">
            <p class="help-block">Example block-level help text here.</p>
        </div>
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" name="description" value="<%= getAttr('description')%>">
        </div>
        <div class="form-group">
            <label>Type</label>
            <select class="form-control" name="type">
                <option <%= getAttr('type') === 'Asset' ? 'selected' : ''%>>Asset</option>
                <option <%= getAttr('type') === 'Liabilities' ? 'selected' : ''%>>Liabilities</option>
                <option <%= getAttr('type') === 'Income' ? 'selected' : ''%>>Income</option>
                <option <%= getAttr('type') === 'Expense' ? 'selected' : ''%>>Expense</option>
            </select>
        </div>
    </form>
</div>
